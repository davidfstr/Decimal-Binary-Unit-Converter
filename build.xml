<project name="DecBinUnitConverter" default="compile">
	<target name="compile">
		<mkdir dir="bin"/>
		<javac srcdir="src" destdir="bin">
			<classpath>
				<pathelement location="lib/forms-1.2.1/forms-1.2.1.jar"/>
			</classpath>
		</javac>
	</target>
	
	<!--
	<target name="run">
		<java classname="DecBinUnitConverter">
			<classpath>
				<pathelement location="bin"/>
